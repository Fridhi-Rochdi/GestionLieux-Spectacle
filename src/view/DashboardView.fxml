<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>

<BorderPane prefHeight="800" prefWidth="1200" xmlns:fx="http://javafx.com/fxml/1"
            xmlns="http://javafx.com/javafx/21.0.5" fx:controller="controller.DashboardController">
    <left>
        <VBox id="sidebar" style="-fx-background-color: #2c3e50; -fx-padding: 20; -fx-spacing: 15;">
            <Button text="Gestion des lieux" onAction="#showLieuxPage" 
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            <Button text="Gestion des spectacles" onAction="#showSpectaclesPage" 
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10; -fx-border-radius: 5; -fx-background-radius: 5;"/>
        </VBox>
    </left>
    <center>
        <AnchorPane fx:id="contentArea" id="main-content" 
                    style="-fx-background-color: #ecf0f1;"/>
    </center>
</BorderPane>
